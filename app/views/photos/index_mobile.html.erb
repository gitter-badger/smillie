<% @title = "#{@party.title}" %>
<%=h flash[:info] %>
<% @photos.each do |photo| %>
<%= tag :img, :src => photo.thumbnail_location %><br />
<%=h photo.created_at.strftime("%m/%d %H:%M") %><br />
<%= link_to "[編集]", edit_photo_path(:id => photo.id, :party_key => params[:party_key]) %>
<%= link_to "[削除]", confirm_destroy_photo_path(:id => photo.id, :party_key => params[:party_key]) %>
<hr color="#888888" />
<% end %>
<%= will_paginate @photos, :prev_label=>'&lt;', :next_label=>'&gt;' %><br />
<hr color="#888888" />
